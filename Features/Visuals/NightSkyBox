local Lighting = game:GetService("Lighting")

-- 1. Ищем и временно убираем старый скайбокс
local OldSky = Lighting:FindFirstChildOfClass("Sky")
if OldSky then
    OldSky.Parent = nil
end

-- 2. Создаем новый скайбокс (сразу при загрузке скрипта)
local NewSky = Instance.new("Sky")
NewSky.Name = "AnonboundSunset"

-- Текстуры
NewSky.SkyboxBk = "rbxassetid://2676763428"
NewSky.SkyboxDn = "rbxassetid://2676763073"
NewSky.SkyboxFt = "rbxassetid://2676763953"
NewSky.SkyboxLf = "rbxassetid://2676764377"
NewSky.SkyboxRt = "rbxassetid://2676764834"
NewSky.SkyboxUp = "rbxassetid://2676765184"

NewSky.SunTextureId = "rbxassetid://6196665106"
NewSky.SunAngularSize = 10
NewSky.StarCount = 3000
NewSky.Parent = Lighting

-- 3. Возвращаем ТОЛЬКО функцию очистки
-- Эта часть сработает, когда ты нажмешь кнопку выключения в GUI
return function()
    if NewSky then 
        NewSky:Destroy() 
    end
    
    if OldSky then 
        OldSky.Parent = Lighting 
    end
end
