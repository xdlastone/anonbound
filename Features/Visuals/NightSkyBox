-- [[ CONFIGURATION ]]
-- 100% Solid Black Texture
local VOID_TEXTURE = "rbxassetid://12933412742"

-- Services
local Lighting = game:GetService("Lighting")

-- Хранилище
local hiddenObjects = {}
local voidSky = nil

-- [[ LOGIC ]]

local function EnableVoid()
    -- 1. Прячем всё текущее
    for _, obj in pairs(Lighting:GetChildren()) do
        if obj:IsA("Sky") or obj:IsA("Atmosphere") then
            table.insert(hiddenObjects, obj)
            obj.Parent = nil 
        end
    end

    -- 2. Создаем Пустоту
    voidSky = Instance.new("Sky")
    voidSky.Name = "Anonbound_Void"
    
    voidSky.SkyboxBk = VOID_TEXTURE
    voidSky.SkyboxDn = VOID_TEXTURE
    voidSky.SkyboxFt = VOID_TEXTURE
    voidSky.SkyboxLf = VOID_TEXTURE
    voidSky.SkyboxRt = VOID_TEXTURE
    voidSky.SkyboxUp = VOID_TEXTURE
    
    voidSky.CelestialBodiesShown = false 
    voidSky.StarCount = 0
    voidSky.SunTextureId = ""
    voidSky.MoonTextureId = ""
    
    voidSky.Parent = Lighting
end

-- Запускаем
EnableVoid()

-- [[ CLEANUP ]]
return function()
    if voidSky then
        voidSky:Destroy()
    end

    for _, obj in pairs(hiddenObjects) do
        if obj then
            obj.Parent = Lighting
        end
    end
    
    hiddenObjects = {}
end
