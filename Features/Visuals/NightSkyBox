-- [[ CONFIGURATION ]] 
local NIGHT_TIME = 0 -- 00:00 (Полночь)

-- Services
local RunService = game:GetService("RunService")
local Lighting = game:GetService("Lighting")

-- 1. Сохраняем оригинальное время перед изменением
local originalTime = Lighting.ClockTime

-- 2. Функция установки ночи
local function SetNight()
    Lighting.ClockTime = NIGHT_TIME
end

-- 3. Применяем сразу при запуске
SetNight()

-- 4. Запускаем цикл (чтобы игра не сменила время обратно)
local connection = RunService.RenderStepped:Connect(function()
    if Lighting.ClockTime ~= NIGHT_TIME then
        SetNight()
    end
end)

-- 5. ВАЖНО: Возвращаем функцию очистки для твоей базы
return function()
    if connection then connection:Disconnect() end
    Lighting.ClockTime = originalTime -- Возвращаем время как было
end
